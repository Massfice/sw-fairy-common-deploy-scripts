{
    "name": "@massfice/sw-fairy-common-deploy-scripts",
    "version": "1.0.0",
    "description": "Common package for deploying microservices into production. Using typescript and gulp",
    "main": "dist/index.js",
    "scripts": {
        "start": "nodemon dist/demo/index.js",
        "dev": "tsc --build ts.config.json --watch",
        "lint": "eslint src/**/*.ts",
        "format": "eslint src/**/*.ts --fix",
        "husky:init": "husky install && husky add .husky/pre-commit 'npm run lint'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Massfice/sw-fairy-common-deploy-scripts.git"
    },
    "keywords": [
        "gulp",
        "shonobi",
        "war",
        "fairy",
        "common",
        "deploy",
        "scripts"
    ],
    "author": "Massfice",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Massfice/sw-fairy-common-deploy-scripts/issues"
    },
    "homepage": "https://github.com/Massfice/sw-fairy-common-deploy-scripts#readme",
    "devDependencies": {
        "@types/gulp": "^4.0.8",
        "@typescript-eslint/eslint-plugin": "^4.28.0",
        "@typescript-eslint/parser": "^4.28.0",
        "eslint": "^7.29.0",
        "gulp": "^4.0.2",
        "husky": "^6.0.0",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.2",
        "ts-node": "^10.0.0",
        "typescript": "^4.3.4"
    }
}
